---
const { title, description } = Astro.props;
import { domain } from './../content/vars.ts';
import '../styles/global.css';
import Footer from '~/components/shared/footer/Footer.component.astro';
import TopBar from '../components/TopBar.astro';
import '../styles/global.css';
import SolutionStories from '~/pages/index/astro/SolutionStories.astro';
import NewsletterWidget from '~/components/NewsletterWidget.vue';

const link = Astro.url.href;
const gaId = import.meta.env.PUBLIC_GA_ID;
const clarityId = import.meta.env.PUBLIC_CLARITY_ID;

const gaScript = `
  // @ts-ignore
  window.dataLayer = window.dataLayer || [];
  // @ts-ignore
  function gtag() {
    dataLayer.push(arguments);
  }
  // @ts-ignore
  gtag('js', new Date());
  // @ts-ignore
  gtag('config', '${gaId}');
`;

const clarityScript = `
  (function (c, l, a, r, i, t, y) {
    c[a] =
      c[a] ||
      function () {
        (c[a].q = c[a].q || []).push(arguments);
      };
    t = l.createElement(r);
    t.async = 1;
    t.src = 'https://www.clarity.ms/tag/' + i;
    y = l.getElementsByTagName(r)[0];
    y.parentNode.insertBefore(t, y);
  })(window, document, 'clarity', 'script', '${clarityId}');
`;

const analyticsSources = ['https://www.googletagmanager.com', 'https://www.google-analytics.com'];
const claritySources = ['https://www.clarity.ms'];
const cspScriptSrc = new Set([
  "'self'",
  "'unsafe-inline'",
  "'unsafe-eval'",
  ...analyticsSources,
  ...claritySources,
  'https://challenges.cloudflare.com'
]);
const cspConnectSrc = new Set([
  "'self'",
  'https://challenges.cloudflare.com',
  ...analyticsSources,
  ...claritySources
]);

const publicApi = import.meta.env.PUBLIC_API;
if (publicApi) {
  try {
    cspConnectSrc.add(new URL(publicApi).origin);
  } catch {
    // Ignore malformed PUBLIC_API values when building the CSP.
  }
}

const cspLines = [
  "default-src 'self';",
  `script-src ${Array.from(cspScriptSrc).join(' ')};`,
  "frame-src 'self' https://challenges.cloudflare.com;",
  "style-src 'self' 'unsafe-inline';",
  `connect-src ${Array.from(cspConnectSrc).join(' ')};`
];

const contentSecurityPolicy = cspLines.join(' ');
---

<html lang="en">
  <head>
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script is:inline set:html={gaScript} />
    <script is:inline type="text/javascript" set:html={clarityScript} />
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <!-- Basic SEO  -->
    <meta name="description" content={description} />
    <!-- <meta name="keywords" content="palabras, clave, relacionadas" /> -->

    <!-- Open Graph (para Facebook, LinkedIn, WhatsApp) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={link} />
    <meta property="og:image" content={domain + '/logo.png'} />
    <meta property="og:image:alt" content="AICCRA Innovation Catalog Logo" />
    <meta property="og:logo" content={domain + '/logo.png'} />
    <meta property="og:site_name" content="AICCRA Innovation Catalog" />

    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={domain + '/logo.png'} />
    <meta
      http-equiv="Content-Security-Policy"
      content={contentSecurityPolicy}
    />
    <title>{title}</title>
  </head>
  <body class="bg-white overflow-x-hidden">
    <TopBar />
    <div class="max-w-screen-2xl mx-auto">
      <slot />
    </div>
    <Footer />
    <NewsletterWidget client:load />
  </body>
</html>
