---
import { Image } from 'astro:assets';
import Icon1 from '../../../images/icon-1.svg';
import Icon2 from '../../../images/icon-2.svg';
import Icon3 from '../../../images/icon-3.svg';
import { texts } from '../../../content/texts';
import type { InnovationCatalogStats } from '~/interfaces/innovation-catalog.interface';
import { useApi } from '~/composables/database-api/useApi';
import { phaseId } from '~/content/vars';

async function fetchStatsInnovations(): Promise<InnovationCatalogStats | null> {
  const { getInnovationStats } = useApi();
  try {
    const response = await getInnovationStats({
      phaseId: phaseId.toString()
    });
    return response;
  } catch (error) {
    console.error('Failed to fetch stats:', error);
    // Return fallback data instead of null
    return {
      innovationCount: 0,
      countryCount: 0,
      averageScalingReadiness: 0,
      phaseId: phaseId
    };
  }
}

const statsData = await fetchStatsInnovations();

const stats = [
  {
    title: 'Total innovations',
    value: statsData?.innovationCount ?? 0,
    imagePath: Icon1
  },
  {
    title: 'Countries',
    value: statsData?.countryCount ?? 0,
    imagePath: Icon2
  },
  {
    title: 'Average scaling readiness',
    value: statsData?.averageScalingReadiness ?? 0,
    imagePath: Icon3
  }
];
---

<!-- Mobile: side padding | Desktop (xlg+): original layout -->
<div
  class="container mx-auto flex flex-col text-center items-center gap-4 mt-6 px-4 lg:flex-row lg:justify-between lg:mt-10 lg:px-4 xl:px-8 2xl:px-12">
  <!-- Mobile: centered, base text | Desktop (lg+): left-aligned, original size -->
  <div
    class="uppercase text-[#0277A2] text-lg font-bold w-full text-center content-center max-w-[350px] sm:max-w-[600px] lg:text-left lg:text-xl lg:max-w-[400px] xl:max-w-[600px] 2xl:max-w-[700px] 2xl:text-2xl px-8 md:p-0">
    {texts.home.overviewStats.title}
  </div>
  <!-- Mobile: vertical stack with horizontal separators | Desktop (lg+): horizontal with vertical separators -->
  <div
    class="flex flex-col gap-2 w-full bg-gradient-to-r from-white to-[#E0EBED1A] rounded-lg p-4 shadow-[0_2px_8px_-4px_rgba(0,0,0,0.1)] lg:flex-row lg:gap-4 xl:gap-5 2xl:gap-6 lg:items-center lg:w-auto">
    {
      stats.map((stat, index) => (
        <>
          <div class="flex items-center gap-4">
            {<Image height="40" src={stat.imagePath} alt={stat.title} class="w-8 h-8 lg:w-10 lg:h-10" loading="eager" />}
            <div class="flex flex-row lg:flex-col gap-2 lg:gap-1 justify-center items-baseline lg:items-start">
              <div class="text-base font-semibold -mb-1.5 lg:text-lg xl:text-xl">{stat.value}</div>
              <div class="text-xs text-gray-400 font-light 2xl:text-sm">{stat.title}</div>
            </div>
          </div>
          {/* Mobile: horizontal separator | Desktop (lg+): vertical separator */}
          {index < stats.length - 1 && <div class="bg-gray-300 h-0.5 w-full lg:h-12 lg:w-0.5" />}
        </>
      ))
    }
  </div>
</div>
