---
import { Image } from 'astro:assets';
import Icon1 from '../../../images/icon-1.svg';
import Icon2 from '../../../images/icon-2.svg';
import Icon3 from '../../../images/icon-3.svg';
import { texts } from '../../../content/texts';
import type { InnovationCatalogV2Stats } from '~/interfaces/innovation-catalog-v2.interface';
import { useApi } from '~/composables/database-api/useApi';

async function fetchStatsInnovations(): Promise<InnovationCatalogV2Stats | null> {
  const { getInnovationStats } = useApi();
  try {
    const response = await getInnovationStats({
      phaseId: '428'
    });
    return response;
  } catch (error) {
    console.error('Failed to fetch stats:', error);
    // Return fallback data instead of null
    return {
      innovationCount: 0,
      countryCount: 0,
      averageScalingReadiness: 0,
      phaseId: 428
    };
  }
}

const statsData = await fetchStatsInnovations();

const stats = [
  {
    title: 'Total innovations',
    value: statsData?.innovationCount ?? 0,
    imagePath: Icon1
  },
  {
    title: 'Countries',
    value: statsData?.countryCount ?? 0,
    imagePath: Icon2
  },
  {
    title: 'Average scaling readiness',
    value: statsData?.averageScalingReadiness ?? 0,
    imagePath: Icon3
  }
];
---

<!-- Mobile: padding lateral | Desktop (xlg+): diseño original -->
<div class="container mx-auto flex flex-col gap-4 mt-6 px-4 lg:flex-row lg:justify-between lg:mt-10 lg:px-4 xl:px-8 2xl:px-12">
  <!-- Mobile: centrado, text base | Desktop (lg+): alineación izquierda, tamaño original -->
  <div
    class="uppercase text-[#0277A2] text-base font-bold w-full text-center lg:text-left lg:text-xl lg:max-w-[475px] xl:max-w-[550px] 2xl:max-w-[650px] px-16 md:p-0">
    {texts.home.overviewStatsTitle}
  </div>
  <!-- Mobile: stack vertical con separadores horizontales | Desktop (lg+): horizontal con separadores verticales -->
  <div
    class="flex flex-col gap-2 w-full bg-gradient-to-r from-white to-[#E0EBED1A] rounded-lg p-4 shadow-[0_2px_8px_-4px_rgba(0,0,0,0.1)] lg:flex-row lg:gap-4 xl:gap-5 2xl:gap-6 lg:items-center lg:w-auto">
    {
      stats.map((stat, index) => (
        <>
          <div class="flex items-center gap-4">
            {<Image height="40" src={stat.imagePath} alt={stat.title} class="w-8 h-8 lg:w-10 lg:h-10" />}
            <div class="flex flex-row md:flex-col gap-2 md:gap-1 justify-center items-center md:items-start">
              <div class="text-base font-semibold -mb-1.5 lg:text-lg xl:text-xl">{stat.value}</div>
              <div class="text-xs text-gray-400 font-light 2xl:text-sm">{stat.title}</div>
            </div>
          </div>
          {/* Mobile: separador horizontal | Desktop (lg+): separador vertical */}
          {index < stats.length - 1 && <div class="bg-gray-300 h-0.5 w-full lg:h-12 lg:w-0.5" />}
        </>
      ))
    }
  </div>
</div>
