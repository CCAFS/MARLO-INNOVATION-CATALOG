---
import MainLayout from "../layouts/MainLayout.astro";
import CounterExample from "../components/CounterExample.vue";
const currentDate = new Date().toLocaleTimeString();
console.log(currentDate);
---

<MainLayout title="Astro">
	<div id="current-date">Current date: {currentDate}</div>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold text-blue-800 text-center mb-8">MARLO-INNOVATION-CATALOG</h1>
		<CounterExample client:load />
	</div>
</MainLayout>
		


<script>
	const element = document.getElementById('current-date') as HTMLElement;
	element.innerHTML = 'Current date: ' + new Date().toLocaleTimeString();
</script>


