---
import MainLayout from '@layouts/MainLayout.astro';
import BasicButton from '~/components/shared/button/BasicButton/BasicButton.component.astro';
---

<MainLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="min-h-[calc(100vh-200px)] flex items-center justify-center px-4">
    <div class="text-center max-w-2xl mx-auto">
      <!-- 404 Icon/Number -->
      <div class="mb-8">
        <div class="relative inline-block">
          <!-- Large 404 number -->
          <h1 class="text-[120px] md:text-[180px] font-bold text-primary-100 leading-none select-none">404</h1>
          <!-- Icon overlay -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="bg-primary-300 rounded-full p-6 shadow-lg">
              <svg class="w-16 h-16 md:w-20 md:h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Error message -->
      <h2 class="text-2xl md:text-3xl font-bold text-text-800 mb-4">Innovation Not Found</h2>
      <p class="text-base md:text-lg text-text-600 mb-8 max-w-md mx-auto">
        The innovation you're looking for doesn't exist or may have been removed from our catalog.
      </p>

      <!-- Action buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/" class="w-full sm:w-auto">
          <BasicButton
            text="Browse All Innovations"
            hasIcon
            icon="pi pi-search"
            classList="w-full sm:w-auto bg-primary-300 text-primary-300 border-primary-300 hover:bg-primary-400 px-6 py-3 justify-center"
          />
        </a>
        <a href="/" class="w-full sm:w-auto">
          <BasicButton
            text="Go to Homepage"
            hasIcon
            icon="pi pi-home"
            classList="w-full sm:w-auto bg-white text-primary-300 border border-primary-300 hover:bg-primary-100 px-6 py-3 justify-center"
          />
        </a>
      </div>

      <!-- Additional help section -->
      <div class="mt-12 py-8 border-t border-border-light">
        <p class="text-sm text-text-600 mb-4">Need help? Contact our support team</p>
        <a href="mailto:MARLOSupport@cgiar.org" class="text-primary-300 hover:underline text-sm font-semibold inline-flex items-center gap-2">
          <span class="pi pi-envelope"></span>
          MARLOSupport@cgiar.org
        </a>
      </div>
    </div>
  </div>
</MainLayout>
